

- @tariffs.each do |tariff|
  -if tariff == current_tariff
    %h4 текущий тариф ( c #{l(tariff.start_date.to_date, :format => :long)} )
  -else
    %h4 с #{l(tariff.start_date.to_date, :format => :long)} по #{l(tariff.end_date.to_date, :format => :long)}
  .tariff-block.row
    .names.span4
      %p горячая вода
      %p холодная вода
      %p водоотведение #{tariff.utilities}
      %p электроэнергия #{tariff.energy}
    .values
      %p #{tariff.hot_water} р
      %p #{tariff.cold_water} р
      %p #{tariff.utilities} р
      %p #{tariff.energy} р





%br

= link_to 'Новый тариф', new_tariff_path
